        <origin xyz="-0 0 0.0" rpy="0 0 0.0"/>
       </visual>
       <collision>
         <geometry>
            <mesh filename="package://anya_v2/meshes/c1.stl" scale="${scale} ${scale} ${scale}"/>
         </geometry>
       </collision>
       <inertial>
         <mass value="0.083"/>
         <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
       </inertial>
     </link>
